groups:
- name: blackboxServiceAlert
  rules:
  - alert: blackboxServiceAlert
    expr: probe_success < 1
    for: 15s
    labels:
      severity: High
    annotations:
      summary: "probe failure"
      description: "job: {{ $labels.job }},blackbox_instance: {{ $labels.instance }} is probe fail (current value: {{ $value }})"

